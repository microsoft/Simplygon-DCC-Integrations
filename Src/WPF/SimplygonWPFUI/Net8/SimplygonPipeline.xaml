                                    <TextBlock Margin="5,0" Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center"/>
                                </Grid>
                            </HierarchicalDataTemplate>
                            <HierarchicalDataTemplate x:Key="SimplygonSettingsPropertyBoolTemplate" ItemsSource="{Binding Items}">
