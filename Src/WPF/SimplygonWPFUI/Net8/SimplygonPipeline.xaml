<UserControl x:Class="SimplygonUI.SimplygonPipeline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             xmlns:local="clr-namespace:SimplygonUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="VisibleCheckBoxStyle" TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditEnabled}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsEditEnabled}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DependencyObjectGridStyle" TargetType="Grid">
            <!--BasedOn="{StaticResource {x:Type Grid}}">-->
            <Style.Triggers>
                <DataTrigger Binding="{Binding DependencyObject}" Value="False">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <ContextMenu x:Key="PropertyContextMenu">
            <MenuItem Header="Set default value" Click="ResetSettingsPropertyValue" />
        </ContextMenu>
        <ContextMenu x:Key="PropertyGroupContextMenu">
            <MenuItem Header="Set all default values" Click="ResetSettingsPropertyValue" />
            <!--<Separator />
            <MenuItem Header="All visible" />
            <MenuItem Header="All hidden" />-->
        </ContextMenu>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Name="LODBar"></StackPanel>
        <StackPanel Grid.Column="1">
            <GroupBox Name="PipelineGroupBox">
                <GroupBox.Header>
                    <Grid Name="PipelineToolbar" Visibility="Visible" Background="Transparent">
