                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="35"></ColumnDefinition>
                            <ColumnDefinition Width="35"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Name="PipelineHeaderTextBlock" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12" FontWeight="Bold"></TextBlock>
